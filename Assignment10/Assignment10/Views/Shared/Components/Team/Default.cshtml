@model IEnumerable<Team>

<a class="btn btn-block btn-info"
   asp-action="Index"
   asp-controller="Home"
   asp-route-teamid=""
   asp-route-teamname="">All Players</a>


@foreach (var x in Model)
{
    <a class="btn btn-block @(x.TeamName == ViewBag.SelectedTeam ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index"
       asp-controller="Home"
       asp-route-teamid="@x.TeamId"
       asp-route-teamname="@x.TeamName">@x.TeamName</a>
}